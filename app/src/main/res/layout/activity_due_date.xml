<?xml version="1.0" encoding="utf-8"?>
    <layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.emarsystest.viewmodel.DueDateViewModel"/>
    </data>


    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_weight="0.4"
            android:text="@string/reportingDate"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>



        <EditText
            android:layout_weight="0.5"
            android:id="@+id/textview_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20dp" />


        <ImageButton
            android:layout_weight="0.1"
            android:id="@+id/ivb_date"
            android:layout_gravity="center"
            android:background="@drawable/date_range_black"
            android:layout_width="0dp"
            android:layout_height="35dp"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:text="@string/turnAroundTime"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <EditText
            android:id="@+id/tvTrunAroudTime"
            android:layout_width="match_parent"
            android:inputType="number"
            android:hint="@string/trunAroudnTimeHint"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCalDueDate"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date" />


    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvDueDateTitle"
            android:text="@string/dueDateTitle"
            android:textSize="20dp"
            android:visibility="gone"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/tvDueDate"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </LinearLayout>

    </LinearLayout>


</layout>



